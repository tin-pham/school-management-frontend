{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": false,
    "target": "es2015",
    "baseUrl": "src",
    "paths": {
      "@core/*": ["app/core/*"],
      "@pages/*": ["app/pages/*"],
      "@features/*": ["app/authorized/feature/*"],
      "@shared/*": ["app/shared/*"],
      "@environments/*": ["environments/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2021", "dom"],
    "plugins": [{ "name": "tslint-language-service" }]
  },
  "angularCompilerOptions": {
    "strictTemplates": true
  }
}
